@{
    ViewData["Title"] = "GuardianRecord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="mt-3"><i class="fa fa-user-plus"></i>Student Information</h2>

<div class="row mt-3" style="width:100%">
    <div class="col-md-12">
        <div class="card card-success">
            <div class="card-header">
            </div>
            <form>
                <div class="card-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="input-group input-group-lg">
                                <input type="search" class="form-control form-control-lg" placeholder="Type your keywords here" value="Select Criteria">
                                <div class="input-group-append">
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Class</label>
                                    <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select</option>
                                        <option>Class Play</option>
                                        <option>Class Nursary</option>
                                        <option>Class KG</option>
                                        <option>Class ONE</option>
                                        <option>Class Two</option>
                                        <option>Class Three</option>
                                        <option>Class Four</option>
                                        <option>Class Five</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label>Section</label>
                                    <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                        <option selected="selected" data-select2-id="3">Select</option>
                                        <option>Lily</option>
                                        <option>Rose</option>
                                        <option>Sunflower</option>
                                        <option>Lotus</option>
                                        <option>Tube Rose</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="Roll Number">Roll Number</label>
                                    <input type="number" class="form-control" id="rollNumber">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-success ml-2">
                                        <i class="fa fa-search"></i>
                                        Search
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

